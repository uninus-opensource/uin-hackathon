{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../../apps/web/backoffice/.next/types/**/*.ts",
    "../../../dist/apps/web/backoffice/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "../../../dist/apps/web/pmb/backoffice/.next/types/**/*.ts",
    "../../../dist/apps/pmb/backoffice/.next/types/**/*.ts",
    "../../../dist/apps/backoffice/.next/types/**/*.ts",
    "../../../dist/apps/web/backoffice/.next/.next/types/**/*.ts",
    "../../../web/backoffice/.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.stories.ts",
    "**/*.stories.js"
  ],
  "references": [
    {
      "path": "./tsconfig.storybook.json"
    }
  ]
}
